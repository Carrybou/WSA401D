{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="card-register card-lost-mdp">
        <h1>Réinitialisez votre mot de passe</h1>

        
            {{ form_start(requestForm) }}
        <div class="form-register">
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse email et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </small>
            </div>
        </div>

            <button class="btn btn-primary btn-lost-mdp">Envoyer l'email de réinitialisation du mot de passe</button>

            
            <p>Vous avez déjà un compte ? <a href="/login" class="link-seco">Se connecter</a></p>
            <p>Vous n'avez pas de compte ? <a href="/register" class="link-seco">S'inscrire</a></p>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
